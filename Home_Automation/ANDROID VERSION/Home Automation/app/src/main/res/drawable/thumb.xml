<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_horizontal">
        <selector>
            <item android:state_checked="false" android:drawable="@drawable/ic_sentiment_neutral_30dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/secondary_text_dark"/>
                    <corners android:radius="25dp"/>
                    <size android:width="30dp" android:height="30dp"/>
                    
                </shape>
            </item>
            <item android:state_checked="true" android:drawable="@drawable/ic_sentiment_satisfied_30dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryDark"/>
                    <corners android:radius="25dp"/>
                    <size android:width="30dp" android:height="30dp" />
                    
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
